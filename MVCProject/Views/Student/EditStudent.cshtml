@model MVCProject.Models.Student

@{
    ViewBag.Title = "EditStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Edit Student</h2>
<div>
    <form method="post">
        <input type="hidden" class="form-control" id="Id" name="Id" value="@ViewBag.student.Id">
        <div class="form-group">
            <label for="RegiNo">Registration Number</label>
            <input type="text" class="form-control" id="RegiNo" name="RegiNo" value="@ViewBag.student.RegiNo" required>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@ViewBag.student.Name" required>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" name="Email" value="@ViewBag.student.Email" required>
        </div>
        <div class="form-group">
            <label for="RegiNo">Mobile Number</label>
            <input type="text" class="form-control" id="MobileNo" name="MobileNo" value="@ViewBag.student.MobileNo" required>
        </div>
        <div class="form-group">
            <input role="button" class="btn-success btn-lg btn-block" type="submit" value="Update" />
        </div>
    </form>
</div>
<div class="container" style="margin-top:20px">
    <a role="button" class="btn-primary btn-lg" href="~/Student/ShowStudents">Cancel</a>
</div>




