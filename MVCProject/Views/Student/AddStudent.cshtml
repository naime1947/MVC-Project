
@{
    ViewBag.Title = "Add Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Student</h2>
<div>
    <form method="post">
        <div class="form-group">
            <label for="RegiNo">Registration Number</label>
            <input type="text" class="form-control" id="RegiNo" name="RegiNo" placeholder="1001" required>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Full Name" required>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" name="Email" placeholder="yourname@domain.com" required>
        </div>
        <div class="form-group">
            <label for="RegiNo">Mobile Number</label>
            <input type="text" class="form-control" id="MobileNo" name="MobileNo" placeholder="01xxxxxxxxx" required>
        </div>
        <div class="form-group">
            <label for="DepartmentId">Department</label>
            <select class="form-control text-center" id="DepartmentId" name="DepartmentId" required>
                <option selected value="">--Select--</option>
                @foreach (MVCProject.Models.Department department in ViewBag.DepartmentList)
                {
                    <option value="@department.Id">@department.Code</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input role="button" class="btn-success btn-lg btn-block" type="submit" value="Save" />
        </div>
    </form>
</div>
<div class="container" style="margin-top:20px">
   <a role="button" class="btn-primary btn-lg" href="~/Student/Index">Back</a> 
    <label>@ViewBag.msg</label>
</div>



